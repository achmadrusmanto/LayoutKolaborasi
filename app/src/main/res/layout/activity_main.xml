<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.layoutkolaborasi.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/gambar1"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button" />
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="INI TEXTVIEW"
       android:padding="5dp"
       android:background="#0c3fe6"
       android:layout_below="@+id/button"
       android:id="@+id/textView" />
   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@drawable/gambar2"
       android:layout_below="@+id/textView"
       android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:background="#f20505"
        android:layout_below="@+id/imageView2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="#f9f6f6"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/button1"
        android:background="#ba0707"
        />
</RelativeLayout>
